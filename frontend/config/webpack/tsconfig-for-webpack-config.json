{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "types/*": ["../../src/types/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es5"
  },
  "include": ["**/*.ts"]
}
