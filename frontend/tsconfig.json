{
  "allowJs": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "paths": {
      "shared/*": ["src/shared/*"],
      "components/*": ["src/components/*"],
      "containers/*": ["src/containers/*"],
      "store/*": ["src/store/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"],
      "theme": ["config/theme"],
      "config": ["config/config"],
      "testUtils": ["config/test/utils/testUtils"],
      "params": ["config/params"]
    },
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es5",
    "types": ["react", "jest", "node"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
