{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "es5",
        "jsx": "react",
        "types": ["react", "jest"],
        "lib": ["es6", "dom", "esnext.asynciterable"],
        "baseUrl": ".",
        "paths": {
            "shared/*": [
                "src/shared/*"
            ],
            "store/*": [
                "src/store/*"
            ],
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}